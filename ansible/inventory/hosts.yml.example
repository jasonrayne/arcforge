# Copy this file to hosts.yml and update hostnames to match your systems
# Replace rhl-kaine with your workstation hostname
# Replace *-hostname entries with your actual hostnames
#
all:
  children:
    personal:
      children:
        workstation:
          hosts:
            rhl-kaine:
              ansible_host: localhost
              ansible_connection: local
              os_family: arch
              machine_type: workstation
              gpu_type: nvidia
        personal_laptop:
          hosts:
            # Users would replace this with their actual laptop hostname
            personal_laptop-hostname:
              ansible_host: localhost
              ansible_connection: local
              os_family: ubuntu
              machine_type: laptop
              gpu_type: hybrid
    work:
      children:
        work_laptop:
          hosts:
            # Users would replace this with their actual work laptop hostname
            work_laptop-hostname:
              ansible_host: localhost
              ansible_connection: local
              os_family: ubuntu
              machine_type: laptop
              gpu_type: hybrid
